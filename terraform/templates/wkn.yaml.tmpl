machine:
  sysctls:
    net.core.somaxconn: 65535
    net.core.netdev_max_backlog: 4096
  kernel:
    modules:
      - name: drbd
        parameters:
          - usermode_helper=disabled
      - name: drbd_transport_tcp
  features:
    kubePrism:
      enabled: true
      port: 7445
  time:
      servers:
          - ntp1.hetzner.de
          - ntp2.hetzner.com
          - ntp3.hetzner.net
          - time.cloudflare.com

cluster:
  externalCloudProvider:
    enabled: false
  network:
    cni:
      name: none
  proxy:
    disabled: false